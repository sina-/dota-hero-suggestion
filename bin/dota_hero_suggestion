from suggest.suggest import Suggest
import argparse


def main():
    parser = argparse.ArgumentParser(description="Suggest dota hero picks")
    parser.add_argument('command', type=str, default='counter', help="""Find counter picks or 
        the heroes the pick counters""", choices=['counter', 'picks'])
    parser.add_argument('--hero', type=str, default='anti-mage')
    parser.add_argument('-l', '--limit', type=int, default=5)

    args = parser.parse_args()

    s = Suggest()
    s.find_top_heroes(name=args.hero, selection_type=args.command, limit=args.limit)

if __name__ == "__main__":
    main()

